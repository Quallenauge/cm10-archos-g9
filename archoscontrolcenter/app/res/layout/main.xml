<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ArchosControlWidgetView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top|right|fill"
    android:columnCount="5"
    android:orientation="vertical"
    android:rowCount="3" >

    <TextView
        android:id="@+id/tvDeepSleep"
        android:layout_column="0"
        android:layout_gravity="right|center_vertical"
        android:layout_row="0"
        android:text="@string/deepsleep_text" />

    <TextView
        android:id="@+id/tv3GPort"
        android:layout_column="0"
        android:layout_gravity="right|center_vertical"
        android:layout_row="1"
        android:text="@string/three_g_port_text" />

    <Button
        android:id="@+id/btnDeepSleep"
        style="?android:attr/buttonStyleSmall"
        android:layout_column="4"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:text="@string/button_text" />

    <Button
        android:id="@+id/btn3GPortSwitch"
        style="?android:attr/buttonStyleSmall"
        android:layout_column="4"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:text="@string/button_text" />

    <TextView
        android:id="@+id/tvDeepSleepState"
        android:layout_column="2"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_row="0"
        android:text="@string/Off" />

    <TextView
        android:id="@+id/tv3GPortState"
        android:layout_column="2"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_row="1"
        android:text="@string/Off" />

</GridLayout>